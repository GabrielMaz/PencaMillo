<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/blue_fb_light" />
            <gradient android:angle="-90" android:startColor="@color/blue_fb_light" android:endColor="@color/blue_fb_light"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/blue_fb_light" />
            <solid android:color="@color/blue_fb_light"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/blue_fb" />
            <gradient android:angle="-90" android:startColor="@color/blue_fb" android:endColor="@color/blue_fb" />
        </shape>
    </item>
</selector>